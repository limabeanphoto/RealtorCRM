// Schema for Neon PostgreSQL
datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // Primary connection string for Prisma
  directUrl = env("POSTGRES_URL_NON_POOLING") // Direct connection for migrations
}

generator client {
  provider = "prisma-client-js"
}

model Contact {
  id              String    @id @default(cuid())
  name            String
  email           String?
  phone           String
  company         String?
  notes           String?
  createdAt       DateTime  @default(now())
  calls           Call[]
}

model Call {
  id              String    @id @default(cuid())
  contactId       String
  contact         Contact   @relation(fields: [contactId], references: [id])
  date            DateTime  @default(now())
  duration        Int       // Duration in minutes
  notes           String?
  outcome         String    // e.g., "Interested", "Not interested", "Follow up"
  createdAt       DateTime  @default(now())
}